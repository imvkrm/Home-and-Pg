<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_layout"

    android:nestedScrollingEnabled="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:id="@+id/head_lay"
        android:background="@drawable/myo"
        android:nestedScrollingEnabled="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_image"
            android:background="#4052b5" />

        <Button
            android:layout_width="340dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/search"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:hint="Search by locality or city"
            android:layout_gravity="bottom"
            android:onClick="search" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:foreground="@android:drawable/ic_menu_search"
            android:clickable="false"
            android:onClick="search" />
        <Button
            android:layout_width="40dp"
            android:foreground="@android:drawable/ic_menu_mylocation"
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:onClick="loc"
            android:layout_marginLeft="305dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:src="@drawable/llogo"
            android:gravity="left"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:text="Myo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/textmyo"
            android:allowUndo="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hello"
            android:id="@+id/uname"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Hello vikram singh"
            android:layout_marginTop="54dp"
            android:layout_gravity="center"
             />



    </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:id="@+id/RcyclerView">

        </android.support.v7.widget.RecyclerView>


</LinearLayout>